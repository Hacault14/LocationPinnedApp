<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Pinned"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Coordinates from Address"
        android:id="@+id/getCoordinatesButton"
        android:layout_marginTop="16dp"
        android:width="300dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location from Coordinates"
        android:id="@+id/addLocationButton"
        android:layout_marginTop="16dp"
        android:width="300dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Location by Address"
        android:id="@+id/deleteLocationButton"
        android:layout_marginTop="16dp"
        android:width="300dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Location by Coordinates"
        android:id="@+id/updateLocationButton"
        android:layout_marginTop="16dp"
        android:width="300dp"/>
</LinearLayout>
